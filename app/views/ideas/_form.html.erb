<%= form_for @idea do |f| %>
<%= f.label :title %>
<%= f.text_field :title %><br/>
<%= f.label :description %>
<%= f.text_area :description%><br/>
<%= f.collection_select :category_id, @categories.order(:title), :id, :title %><br/>

<p>Select images for your idea:</p>
<%= f.collection_check_boxes(:id, @images, :id, :photo, :item_wrapper_class => 'checkbox_container') %><br/>

<%= f.submit %>

<% end %>
