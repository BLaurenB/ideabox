<h1><%= @category.title%></h1>
<%= button_to "Create New Idea", new_category_idea_path(@category), method: :get %>

<h2><%= @category.title%>'s Ideas</h2>
<% @category.ideas.each do |idea| %>
<h3><%= idea.title %></h3>
<%= button_to "Edit", edit_category_path(@category), method: :get %>
<%= button_to "Delete", category_path(@category), method: :delete %>
<% end %>
<br/>

<%= link_to "Return to Main Category Page", categories_path %>
