<h1>All Categories</h1>

<%= link_to "Create a New Category", new_category_path(@category) %><br/>

<% @categories.each do |category| %>
<h2><%= link_to category.title, category_path(category) %><h2>
<%= button_to "Edit", edit_category_path(category) %>
<%= button_to "Delete", category_path(category), method: :delete %>  
<% end %>
