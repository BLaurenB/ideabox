<!DOCTYPE html>
<html>
  <head>
    <title>Ideabox</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all'  %>
    <%= javascript_include_tag 'application'  %>

  </head>
    <body class="">
      <nav class = "trouble">
      <h1 class="title_bar trouble">iDEA bOX</h1>
        <h2 class="center trouble"><%= link_to "Categories", admin_categories_path%>  |
        <%= link_to "Ideas", ideas_path %>  |
        <%= link_to "Images", admin_images_path%></h2>
        <p style="text-align: center trouble"> <%= "Hello, #{current_user.username}!  " if current_user %><br/>
        <%= link_to('Logout', logout_path, method: :delete)  if current_user %></p>
      </nav>
        <% flash.each do |name, msg| %>
          <%= content_tag :div, msg, class: name %>
        <% end %>

        <div class="yield_body">
        <%= yield %>
        </div>

      <footer>
          <p style="text-align: center"> Lauren Billington</p>
      </footer>
    </body>
</html>
